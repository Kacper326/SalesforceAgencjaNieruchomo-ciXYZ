<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Property_post_code</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT(REGEX( Property_Post_Code__c , &quot;^[0-9]{2}-[0-9]{3}$&quot;)), NOT(ISBLANK(Property_Post_Code__c)) )</errorConditionFormula>
    <errorDisplayField>Property_Post_Code__c</errorDisplayField>
    <errorMessage>Odpowiedni format to dd-ddd, gdzie d to liczba</errorMessage>
</ValidationRule>
